<?xml version='1.0' encoding='utf-8'?>
<widget id="com.riv.Visitar" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Visitar</name>
    <description>
        An app for viewing AR and VR tours.
    </description>
    <author email="contact@revolutioninteractivevideo.com" href="http://revolutioninteractivevideo.com">
        Revolution Interactive Video
    </author>
    <content src="index.html" />
    <icon src="www/img/logo.png" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="http://revolutioninteractivevideo.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="iosPersistentFileLocation" value="Library" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <platform name="android">
        <splash density="land-hdpi" src="www/img/splash/splashland1.png" />
        <splash density="land-ldpi" src="www/img/splash/splashland1.png" />
        <splash density="land-mdpi" src="www/img/splash/splashland1.png" />
        <splash density="land-xhdpi" src="www/img/splash/splashland1.png" />
        <splash density="port-hdpi" src="www/img/splash/splashport.png" />
        <splash density="port-ldpi" src="www/img/splash/splashport.png" />
        <splash density="port-mdpi" src="www/img/splash/splashport.png" />
        <splash density="port-xhdpi" src="www/img/splash/splashport.png" />
    </platform>
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="8000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="xwalkVersion" value="16+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
    
    

</widget>
