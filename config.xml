<?xml version='1.0' encoding='utf-8'?>
<widget id="com.riv.Visitar" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Visitar</name>
    <description>
        An app for viewing AR and VR tours.
    </description>
    <author email="contact@revolutioninteractivevideo.com" href="http://revolutioninteractivevideo.com">
        Revolution Interactive Video
    </author>
    <content src="index.html" />
    <icon src="www/img/logo.png" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="http://revolutioninteractivevideo.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <feature name="http://api.phonegap.com/1.0/network" />
    <feature name="http://api.phonegap.com/1.0/file" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="iosPersistentFileLocation" value="Library" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    
    

    <platform name="android">
        <splash density="land-hdpi" src="landscape-hdpi.png" qualifier="hdpi"  />
        <splash density="land-ldpi" src="landscape-ldpi.png" qualifier="ldpi" />
        <splash density="land-mdpi" src="landscape-mdpi.png" qualifier="mdpi" />
        <splash density="land-xhdpi" src="landscape-xhdpi.png" qualifier="xhdpi" />
        <splash density="land-xxhdpi" src="landscape-xxhdpi.png" qualifier="xhdpi" />
        <splash density="port-hdpi" src="portrait-hdpi.png" />
        <splash density="port-ldpi" src="portrait-ldpi.png" qualifier="ldpi" />
        <splash density="port-mdpi" src="portrait-mdpi.png" />
        <splash density="port-xhdpi" src="portrait-xhdpi.png" />
        <splash density="port-xxhdpi" src="portrait-xxhdpi.png" />
    </platform>
   
    <platform name="ios">
    <splash src="Default.png" width="320" height="480" />
<splash src="Default@2x.png"  width="640" height="960" />

<!-- iPhone 5 / iPod Touch (5th Generation) -->
<splash src="Default-568h@2x.png" width="640" height="1136" />

<!-- iPhone 6 -->
<splash src="Default-667h@2x.png" width="750" height="1334" />
<splash src="Default-Portrait-736h@3x.png"  width="1242" height="2208" />
<splash src="Default-Landscape-736h@3x.png"  width="2208" height="1242" />

<!-- iPad -->
<splash src="Default-Portrait.png"  width="768" height="1024" />
<splash src="Default-Landscape.png"  width="1024" height="768" />

<!-- Retina iPad -->
<splash src="Default-Portrait@2x.png"  width="1536" height="2048" />
<splash src="Default-Landscape@2x.png"  width="2048" height="1536" />
    
    </platform>
    
     
    
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="6800" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="xwalkVersion" value="16+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <preference name="xwalkMultipleApk" value="true" />
    
    
    
    <plugin name="cordova-plugin-file-transfer" />
    <plugin name="cordova-plugin-whitelist" />
    <plugin name="nl.x-services.plugins.insomnia" />
    <plugin name="cordova-plugin-file" />
    <plugin name="cordova-plugin-splashscreen" />
    <plugin name="cordova-plugin-zip" />
</widget>
